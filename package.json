{
  "name": "tokenbot",
  "version": "1.0.0",
  "description": "TokenBot (TBOT) - ERC-20 token with multi-chain bridge support",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tokenbot-org/token-contracts.git"
  },
  "bugs": {
    "url": "https://github.com/tokenbot-org/token-contracts/issues"
  },
  "homepage": "https://github.com/tokenbot-org/token-contracts#readme",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "test:l1": "hardhat test test/TokenBotL1.test.js",
    "test:coverage": "hardhat coverage",
    "test:gas": "REPORT_GAS=true hardhat test",
    "lint": "npm run lint:sol && npm run lint:js",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "lint:js": "eslint '**/*.js'",
    "lint:fix": "npm run lint:sol:fix && npm run lint:js:fix",
    "lint:sol:fix": "solhint 'contracts/**/*.sol' --fix",
    "lint:js:fix": "eslint '**/*.js' --fix",
    "format": "prettier --write '**/*.{js,json,md,sol}'",
    "format:check": "prettier --check '**/*.{js,json,md,sol}'",
    "deploy:testnet": "hardhat run scripts/deploy.js --network sepolia",
    "deploy:mainnet": "hardhat run scripts/deploy.js --network mainnet",
    "deploy:ethereum:testnet": "hardhat run scripts/deployEthereum.js --network sepolia",
    "deploy:ethereum:mainnet": "hardhat run scripts/deployEthereum.js --network ethereum",
    "deploy:base:testnet": "hardhat run scripts/deployEthereum.js --network baseTestnet",
    "deploy:base:mainnet": "hardhat run scripts/deployEthereum.js --network baseMainnet",
    "verify": "hardhat run scripts/verify.js",
    "verify:batch": "hardhat run scripts/verifyBatch.js",
    "verify:l1:testnet": "hardhat run scripts/verify.js --network sepolia",
    "verify:l1:mainnet": "hardhat run scripts/verify.js --network mainnet",
    "verify:batch:testnet": "hardhat run scripts/verifyBatch.js --network sepolia",
    "verify:batch:mainnet": "hardhat run scripts/verifyBatch.js --network mainnet",
    "verify:batch:base:testnet": "hardhat run scripts/verifyBatch.js --network baseTestnet",
    "verify:batch:base:mainnet": "hardhat run scripts/verifyBatch.js --network baseMainnet",
    "clean": "hardhat clean",
    "node": "hardhat node",
    "console": "hardhat console",
    "flatten": "hardhat flatten",
    "size": "hardhat size-contracts",
    "setup": "node scripts/setup-env.js",
    "setup:env": "node scripts/setup-env.js"
  },
  "keywords": [
    "tokenbot",
    "tbot",
    "erc20",
    "base",
    "ethereum",
    "solana",
    "multi-chain",
    "cross-chain",
    "blockchain",
    "smart-contract"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.1.0",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "dotenv": "^17.2.1",
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "ethers": "^6.4.0",
    "hardhat": "^2.19.0",
    "hardhat-gas-reporter": "^1.0.8",
    "prettier": "^3.2.5",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.1.1",
    "solidity-coverage": "^0.8.0",
    "typechain": "^8.3.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "@solana/spl-token": "^0.3.9",
    "@solana/web3.js": "^1.87.6",
    "bip39": "^3.1.0",
    "bs58": "^6.0.0",
    "ed25519-hd-key": "^1.3.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
